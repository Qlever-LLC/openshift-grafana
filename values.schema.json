{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Values",
  "type": "object",
  "$defs": {
    "endpoint": {
      "type": "object",
      "required": [
        "name",
        "namespace",
        "port"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        }
      }
    }
  },
  "required": [
    "lokistack",
    "prometheus"
  ],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "nameOverride": {
      "type": ["string", "null"]
    },
    "fullnameOverride": {
      "type": ["string", "null"]
    },
    "domain": {
      "type": ["string", "null"]
    },
    "lokistack": {
      "$ref": "#/$defs/endpoint"
    },
    "prometheus": {
      "$ref": "#/$defs/endpoint"
    }
  }
}
